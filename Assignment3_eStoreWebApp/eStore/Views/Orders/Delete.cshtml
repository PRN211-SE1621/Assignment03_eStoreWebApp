@using BusinessObject
@using Microsoft.AspNetCore.Http
@using System.Text.Json;
@model Order
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete order</h1>

<h4>Are you sure you want to delete this?</h4>
<div class="">
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(Model => Model.MemberId)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(Model => Model.MemberId)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(Model => Model.OrderDate)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(Model => Model.OrderDate)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(Model => Model.RequiredDate)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(Model => Model.RequiredDate)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(Model => Model.ShippedDate)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(Model => Model.ShippedDate)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(Model => Model.Freight)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(Model => Model.Freight) 
        </dd>
    </dl>
        
</div>
    <div class="col-md-8">
        <h4>List of Products</h4>
            @if(Model.OrderDetails != null && Model.OrderDetails.Count > 0)
            {
                <table class="table">
                <thead>
                    <tr>
                        <th>
                            @nameof(OrderDetail.ProductId)
                        </th>
                        <th>
                            @nameof(OrderDetail.Discount)
                        </th>
                        <th>
                            @nameof(OrderDetail.UnitPrice)
                        </th>
                        <th>@nameof(OrderDetail.Quantity)</th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model.OrderDetails) {
                    <tr>
                        <form asp-action="AddToCart">
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Discount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UnitPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                        </form>
                    </tr>
            }
                </tbody>
            </table>
            } else {<p> empty </p>}
    </div>
        <form asp-action="Delete">
        <input type="hidden" asp-for="OrderId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
        </form>
        <label class="text-danger">@TempData["message"]</label>
