@model IEnumerable<BusinessObject.OrderDetail>;
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(orderDetail => orderDetail.ProductId)</th>
            <th>@Html.DisplayNameFor(orderDetail => orderDetail.Product.CategoryId)</th>
            <th>@Html.DisplayNameFor(orderDetail => orderDetail.Product.ProductName)</th>
            <th>@Html.DisplayNameFor(orderDetail => orderDetail.Quantity)</th>
            <th>@Html.DisplayNameFor(orderDetail => orderDetail.UnitPrice)</th>
            <th>@Html.DisplayNameFor(orderDetail => orderDetail.Discount)</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach(BusinessObject.OrderDetail orderDetail in Model)
            {
                <tr>
 
                    <td>@Html.DisplayFor(modelItem => orderDetail.ProductId)</td>
                    <td>@Html.DisplayFor(modelItem => orderDetail.Product.CategoryId)</td>
                    <td>@Html.DisplayFor(modelItem => orderDetail.Product.ProductName)</td>
                    <td>@Html.DisplayFor(modelItem => orderDetail.Quantity)</td>
                    <td>@Html.DisplayFor(modelItem => orderDetail.UnitPrice)</td>
                    <td>@Html.DisplayFor(modelItem => orderDetail.Discount)</td>

                </tr>
            }
        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to List Order</a>
</div>